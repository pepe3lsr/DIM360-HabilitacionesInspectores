# ============= CONFIGURACIÓN DE DESARROLLO =============

# Backend
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# JWT
JWT_SECRET=dev-super-secret-key-change-in-prod

# Twilio (obtén en https://www.twilio.com/console)
TWILIO_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_TOKEN=your_auth_token_here
TWILIO_PHONE=+1234567890

# Base de Datos
DATABASE_URL=postgresql://user:password@localhost:5432/notificaciones
# Para desarrollo local con SQLite:
DB_PATH=./data.db

# Frontend Mobile
REACT_NATIVE_API_URL=http://192.168.1.100:3000
REACT_NATIVE_ENV=development

# Logging
LOG_LEVEL=debug

# Seguridad
ENABLE_CORS=true
CORS_ORIGIN=*
